<div class="container">
  <div class="row ">
    <div class="col-12 px-5 px-sm-0">
      <div class="mt-3">
        <span class="bg-light mt-5 px-2">
          <strong>ユーザー情報編集</strong>
        </span>
      </div>

      <%= form_with model: @user, url: user_path, method: :patch do |f| %>

        <div class="form-group mt-5">
          <div class="form-row justify-content-center">
            <div class="col-3">
              <%= f.label :image, "プロフィール画像" %>
            </div>
            <div class="col-6">
            　　<%= f.file_field :image, accept: "image/*" %>
            </div>
          </div>
        </div>

        <div class="form-group mt-4">
          <div class="form-row justify-content-center">
            <div class="col-3">
              <%= f.label :nickname,"ニックネーム" %>
            </div>
            <div class="col-6">
            　　<%= f.text_field :nickname, autocomplete: "nickname" %>
            </div>
          </div>
        </div>

        <div class="form-group mt-4">
          <div class="form-row justify-content-center">
            <div class="col-3">
              <%= f.label :introduction, "自己紹介" %>
            </div>
            <div class="col-6">
              　　<%= f.text_area :introduction, autocomplete: "introduction", rows: 6, cols: 30 %>
            </div>
          </div>
        </div>

        <div class="form-group mt-4">
          <div class="form-row justify-content-center">
            <div class="col-3">
              <%= f.label :email, "メールアドレス" %>
            </div>
            <div class="col-6">
              　　<%= f.email_field :email, autocomplete: "email" %>
            </div>
          </div>
        </div>

        <div class="row justify-content-center">
          <div class="mt-4 col-4">
            <%= f.submit "編集内容を保存", class: "btn btn-block btn-success" %>
          </div>
        </div>

      <% end %>
    </div>
  </div>
</div>