<div class="container">
  <div class="row ">
    <div class="col-12 px-5 px-sm-0">
      <div class="mt-3">
        <span class="bg-light mt-3 px-2">
          <strong>新規登録</strong>
        </span>
      </div>

      <%= form_with model: @user, url: user_registration_path do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <div class="field mt-4">
          <div class="form-row justify-content-center">
            <div class="col-3">
              <%= f.label :image, "プロフィール画像" %>
            </div>
            <div class="col-6">
            　　<%= f.file_field :image, accept: "image/*" %>
            </div>
          </div>
        </div>

        <div class="field mt-4">
          <div class="form-row justify-content-center">
            <div class="col-3">
              <%= f.label :nickname, "ニックネーム" %>
            </div>
            <div class="col-6">
            　　<%= f.text_field :nickname, autocomplete: "nickname" %>
            </div>
          </div>
        </div>

        <div class="field mt-4">
          <div class="form-row justify-content-center">
            <div class="col-3">
              <%= f.label :email, "メールアドレス" %>
            </div>
            <div class="col-6">
              　　<%= f.email_field :email, autocomplete: "email" %>
            </div>
          </div>
        </div>

        <div class="field mt-4">
          <div class="form-row justify-content-center">
            <div class="col-3">
              <%= f.label :password, "パスワード（６文字以上）"%>
            </div>
            <div class="col-6">
              <% if @minimum_password_length %>
              <!--<em>(<%#= @minimum_password_length %> characters minimum)</em>-->
              <% end %>
                　　<%= f.password_field :password, autocomplete: "new-password" %>
            </div>
          </div>
        </div>

        <div class="field mt-4">
          <div class="form-row justify-content-center">
            <div class="col-3">
              <%= f.label :password_confirmation, "パスワード（確認用）"%>
            </div>
            <div class="col-6">
              　　<%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </div>
          </div>
        </div>

        <div class="actions mt-4 col-4 mx-auto">
          <%= f.submit "新規登録", class: "btn btn-block btn-success" %>
        </div>
      <% end %>

    </div>
  </div>
  <div class="row justify-content-center">
    <div class="mt-5">
      <span class="bg-light mx-auto px-2">
        <strong>既に登録済みの方</strong>
      </span>
      <div class="mt-3">
    　   <%= link_to user_session_path do  %>
          こちら
        <% end %>
        からログインしてください。
      </div>
      <div>
        <%= link_to 'ゲストログイン', sessions_guest_path, method: :post %>
      </div>
    </div>
  </div>
</div>
