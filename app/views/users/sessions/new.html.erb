<div class="container">
  <div class="row justify-content-center">
    <div class="col-8 mt-3 ">
      <span class="bg-light px-2">
        <strong>ログイン</strong>
      </span>
    </div>
  </div>

  <%= form_with model: @user, url: user_session_path do |f| %>

    <div class="field mt-4 text-left">
      <div class="row justify-content-center">
        <div class="col-2">
          <%= f.label :メールアドレス %>
        </div>
        <div class="col-4">
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      </div>
    </div>

    <div class="field mt-4 text-left">
      <div class="row justify-content-center">
        <div class="col-2">
          <%= f.label :パスワード %>
        </div>
        <div class="col-4">
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>
      </div>
    </div>

    <div class="actions">
      <div class="row justify-content-center">
        <div class="col-4 mt-4">
          <%= f.submit "ログイン", class: "btn btn-block btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
      
  <div class="row justify-content-center">  
    <div class="mt-5">
      <span class="bg-light px-2">
        <strong>会員登録がお済みでない方</strong>
      </span>
      <div class="mt-3">
        <%= link_to new_user_registration_path do %>
        こちら
        <% end %>
        から新規登録を行ってください。
      </div>
    </div>
  </div>
</div>